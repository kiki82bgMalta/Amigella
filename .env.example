# ========================================
# AMIGELLA BACKEND - ENVIRONMENT VARIABLES
# ========================================

# ========== DATABASE ==========
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432
DB_NAME=amigella

# ========== SERVER ==========
PORT=3000
NODE_ENV=development

# ========== GOOGLE GEMINI API ==========
# Dobij API key sa: https://aistudio.google.com
GEMINI_API_KEY=your_gemini_api_key_here

# ========== FILE UPLOADS ==========
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=26214400  # 25MB in bytes

# ========== CORS ==========
CORS_ORIGIN=http://localhost:3000,http://localhost:8081,http://localhost:19006

# ========== JWT (ako koristi≈° JWT) ==========
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d

# ========== LOGGING ==========
LOG_LEVEL=debug
